<properties xmlns:xs="http://www.w3.org/2001/XMLSchema"
            xmlns:oxf="http://www.orbeon.com/oxf/processors"
            xmlns:xi="http://www.w3.org/2001/XInclude">

    <property as="xs:string"  name="oxf.xforms.xbl.mapping.fb"                       value="http://orbeon.org/oxf/xml/form-builder"/>

    <!-- Toolbox -->
    <property as="xs:string"  name="oxf.fb.toolbox.group.text.uri.*.*"               value="oxf:/forms/orbeon/builder/xbl/text-controls.xbl
                                                                                            oxf:/xbl/orbeon/tinymce/tinymce.xbl"/>
    <property as="xs:string"  name="oxf.fb.toolbox.group.typed.uri.*.*"              value="oxf:/forms/orbeon/builder/xbl/typed-controls.xbl
                                                                                            oxf:/xbl/orbeon/us-phone/us-phone.xbl
                                                                                            oxf:/xbl/orbeon/number/number.xbl
                                                                                            oxf:/xbl/orbeon/currency/currency.xbl
                                                                                            oxf:/xbl/orbeon/us-state/us-state.xbl"/>
    <property as="xs:string"  name="oxf.fb.toolbox.group.dateTime.uri.*.*"           value="oxf:/forms/orbeon/builder/xbl/date-time-controls.xbl
                                                                                            oxf:/xbl/orbeon/dropdown-date/dropdown-date.xbl
                                                                                            oxf:/xbl/orbeon/fields-date/fields-date.xbl
                                                                                            oxf:/xbl/orbeon/date-picker/date-picker.xbl"/>
    <property as="xs:string"  name="oxf.fb.toolbox.group.selection.uri.*.*"          value="oxf:/forms/orbeon/builder/xbl/selection-controls.xbl
                                                                                            oxf:/xbl/orbeon/box-select/box-select.xbl
                                                                                            oxf:/xbl/orbeon/databound-select1/databound-select1.xbl
                                                                                            oxf:/xbl/orbeon/autocomplete/autocomplete.xbl"/>
    <property as="xs:string"  name="oxf.fb.toolbox.group.attachment.uri.*.*"         value="oxf:/forms/orbeon/builder/xbl/attachment-controls.xbl
                                                                                            oxf:/xbl/orbeon/image-attachment/image-attachment.xbl
                                                                                            oxf:/xbl/orbeon/attachment/attachment.xbl
                                                                                            oxf:/xbl/orbeon/wpaint/wpaint.xbl"/>
    <property as="xs:string"  name="oxf.fb.toolbox.group.button.uri.*.*"             value="oxf:/forms/orbeon/builder/xbl/button-controls.xbl"/>

    <property as="xs:boolean" name="oxf.fb.menu.schema"                              value="true"/>
    <property as="xs:boolean" name="oxf.fb.menu.pdf"                                 value="true"/>
    <property as="xs:boolean" name="oxf.fb.menu.edit-source"                         value="true"/>
    <property as="xs:boolean" name="oxf.fb.menu.css"                                 value="false"/>
    <property as="xs:boolean" name="oxf.fb.menu.custom-xml"                          value="false"/>
    <property as="xs:boolean" name="oxf.fb.menu.permissions"                         value="true"/>

    <property as="xs:boolean" name="oxf.fb.metadata.logo"                            value="true"/>
    <property as="xs:integer" name="oxf.fb.grid.max-columns"                         value="4"/>
    <property as="xs:integer" name="oxf.fb.section.close"                            value="100"/>

    <!-- Form Builder summary page  -->
    <property as="xs:string"  name="oxf.fr.summary.buttons.orbeon.builder"           value="home delete new"/>

    <!-- Available languages -->
    <property as="xs:string" name="oxf.fr.available-languages.orbeon.builder"        value="en fr it de"/>

    <!-- In case somebody overrides with weaker properties -->
    <property as="xs:boolean" name="oxf.fr.detail.hints.inline.orbeon.builder"       value="true"/>

    <!-- Processes associated with Form Builder buttons -->
    <property as="xs:string"  name="oxf.fr.detail.process.save.orbeon.builder"       value='save-final'/>
    <property as="xs:string"  name="oxf.fr.detail.process.close.orbeon.builder"      value='summary'/>

</properties>
